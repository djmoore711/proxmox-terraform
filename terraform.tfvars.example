# terraform.tfvars.example - Commit this to version control

proxmox_api_url          = "https://proxmox-01.example.com:8006/api2/json"
proxmox_api_token_id     = "terraform@pam!terraform"
proxmox_api_token_secret = "REPLACE_WITH_ACTUAL_TOKEN"  # Never commit real values
proxmox_host_node        = "proxmox-01"
vm_id                    = "REPLACE_WITH_VM_ID"
template_vm_id           = "REPLACE_WITH_TEMPLATE_ID"
vm_password              = "REPLACE_WITH_SECURE_PASSWORD"
storage_volume           = "local-lvm"

# VM configuration
vm_name                  = "prox-docker"

# Tailscale configuration
tailscale_auth_key       = "REPLACE_WITH_TAILSCALE_AUTH_KEY"  # Never commit real values
tailscale_hostname       = "prox-docker"
tailscale_tags           = ["tag:homelab"]

# Proxmox node for snippet storage (must match storage accessible on this node)
proxmox_node             = "proxmox-01"

# Node where the template VM resides (can differ from proxmox_host_node)
template_source_node      = "proxmox-01"

# Storage ID for cloud-init snippets (e.g., 'local', 'local-lvm')
snippet_storage           = "local"
